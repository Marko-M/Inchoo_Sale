<config>
    <modules>
        <Inchoo_Sale>
            <version>0.4.1</version>
        </Inchoo_Sale>
    </modules>
    <global>
        <models>
            <inchoo_sale>
                <class>Inchoo_Sale_Model</class>
            </inchoo_sale>
        </models>
        <blocks>
            <inchoo_sale>
                <class>Inchoo_Sale_Block</class>
            </inchoo_sale>
        </blocks>
        <helpers>
            <inchoo_sale>
                <class>Inchoo_Sale_Helper</class>
            </inchoo_sale>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <inchoo_sale>
                    <file>inchoo_sale.xml</file>
                </inchoo_sale>
            </updates>
        </layout>
        <routers>
            <inchoo_sale>
                <use>standard</use>
                <args>
                    <module>Inchoo_Sale</module>
                    <frontName>sale</frontName>
                </args>
            </inchoo_sale>
        </routers>
        <!-- Enterprise_PageCache support -->
        <cache>
            <requests>
                <inchoo_sale>
                    <index>
                        <view>enterprise_pagecache/processor_category</view>
                    </index>
                </inchoo_sale>
            </requests>
        </cache>        
    </frontend>
</config>
